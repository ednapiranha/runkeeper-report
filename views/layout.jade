!!! 5
html
  head
    title TrackWeek
    meta(content='width=device-width, height=device-height, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0', name='viewport')
    meta(content='yes', name='apple-mobile-web-app-capable')
    meta(content='chrome=1', http-equiv='X-UA-Compatible')
    link(rel='shortcut icon', href='/images/favicon.png')
    if isDebug
      link(rel='stylesheet', href='/stylesheets/main.css')
    else
      link(rel='stylesheet', href='/stylesheets/main-min.css')

  body
    #wrapper
      header
        if session
          a(href='/logout', class='close', data-action='logout') x
        else
          .home-wrapper
            h1.home TrackWeek
            p.intro Track your weekly activities
          a(href='/auth/runkeeper', data-action='login') Sign in with Runkeeper

      block content
      #footer
    if !session
      .logging-in.hidden
        p Signing in ...

    script(src='/javascripts/lib/indexedDBShim.js', type='text/javascript')
    script(type='text/javascript', src='http://maps.google.com/maps/api/js?sensor=false')
    if isDebug
      script(src='/javascripts/require.js', data-main='/javascripts/config')
    else
      script(src='/javascripts/build/trackweek.js')
